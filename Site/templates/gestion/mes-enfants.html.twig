<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mes Enfants - AlloParents</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'fade-in': 'fadeIn 0.6s ease-out',
                        'slide-up': 'slideUp 0.6s ease-out',
                        'slide-in-left': 'slideInLeft 0.8s ease-out',
                        'slide-in-right': 'slideInRight 0.8s ease-out',
                        'scale-in': 'scaleIn 0.3s ease-out',
                        'pulse-glow': 'pulseGlow 3s ease-in-out infinite',
                        'bounce-subtle': 'bounceSubtle 2s ease-in-out infinite',
                        'float': 'float 6s ease-in-out infinite',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0', transform: 'scale(0.95)' },
                            '100%': { opacity: '1', transform: 'scale(1)' }
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(30px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' }
                        },
                        slideInLeft: {
                            '0%': { transform: 'translateX(-30px)', opacity: '0' },
                            '100%': { transform: 'translateX(0)', opacity: '1' }
                        },
                        slideInRight: {
                            '0%': { transform: 'translateX(30px)', opacity: '0' },
                            '100%': { transform: 'translateX(0)', opacity: '1' }
                        },
                        pulseGlow: {
                            '0%, 100%': { boxShadow: '0 0 20px rgba(255, 255, 255, 0.1)' },
                            '50%': { boxShadow: '0 0 40px rgba(255, 255, 255, 0.2)' }
                        },
                        bounceSubtle: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-5px)' }
                        },
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-10px)' }
                        },
                        scaleIn: {
                            '0%': { opacity: '0', transform: 'scale(0.8)' },
                            '100%': { opacity: '1', transform: 'scale(1)' }
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .gradient-bg {
            background: linear-gradient(135deg,
                #ffffff 0%,
                #f8fafc 25%,
                #f1f5f9 50%,
                #e2e8f0 75%,
                #cbd5e1 100%
            );
        }
        
        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(0, 0, 0, 0.08);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), 0 4px 16px rgba(0, 0, 0, 0.04);
        }
        
        .glass-card:hover {
            background: rgba(255, 255, 255, 1);
            border-color: rgba(0, 0, 0, 0.12);
        }
        
        .glass-input {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0, 0, 0, 0.1);
        }
        
        .points-glow {
            background: linear-gradient(45deg, #3b82f6, #2563eb, #1d4ed8);
            box-shadow: 0 0 30px rgba(59, 130, 246, 0.2);
        }
        
        .floating-orbs::before,
        .floating-orbs::after {
            content: '';
            position: absolute;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
            pointer-events: none;
        }
        
        .floating-orbs::before {
            width: 400px;
            height: 400px;
            top: -200px;
            right: -200px;
            animation: float 12s ease-in-out infinite;
        }
        
        .floating-orbs::after {
            width: 300px;
            height: 300px;
            bottom: -150px;
            left: -150px;
            animation: float 8s ease-in-out infinite reverse;
        }

        .action-btn {
            background: linear-gradient(45deg, #f8fafc, #e2e8f0);
            transition: all 0.3s ease;
        }

        .action-btn:hover {
            background: linear-gradient(45deg, #e2e8f0, #cbd5e1);
            transform: translateY(-2px);
        }

        .text-shadow {
            text-shadow: 0 2px 20px rgba(0,0,0,0.1);
        }

        .btn-primary {
            background: linear-gradient(45deg, #3b82f6, #2563eb, #1d4ed8);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background: linear-gradient(45deg, #2563eb, #1d4ed8, #1e40af);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: linear-gradient(45deg, #f093fb, #f5576c);
            transition: all 0.3s ease;
        }
        
        .btn-secondary:hover {
            transform: translateY(-2px);
        }
    </style>
</head>

<body class="gradient-bg min-h-screen">
    <!-- Background Effects -->
    <div class="floating-orbs fixed inset-0 pointer-events-none"></div>
    
    {% include 'partials/_top_navigation.html.twig' with {'pageTitle': 'Gestion - Enfants'} %}


    <!-- Main Content -->
    <main class="pt-24 px-4 pb-24">
        <!-- Messages -->
        {% if error %}
            <div class="mb-6 glass-card rounded-2xl p-4 border-l-4 border-red-500 animate-slide-up">
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-red-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <p class="text-red-700">{{ error }}</p>
                </div>
            </div>
        {% endif %}

        {% if success %}
            <div class="mb-6 glass-card rounded-2xl p-4 border-l-4 border-green-500 animate-slide-up">
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <p class="text-green-700">{{ success }}</p>
                </div>
            </div>
        {% endif %}

        <!-- Quick Actions -->
        <div class="mb-8 animate-slide-in-left">
            <h2 class="text-gray-800 font-bold text-lg mb-4">Actions rapides</h2>
            <div class="grid grid-cols-2 gap-3">
                <a href="{{ path('gestion_voitures') }}" class="action-btn rounded-2xl p-4 text-center group">
                    <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">üöó</div>
                    <div class="text-gray-800 font-medium text-sm">Voitures</div>
                    <div class="text-gray-600 text-xs">G√©rer</div>
                </a>
                <a href="{{ path('gestion_proposer_ecole') }}" class="action-btn rounded-2xl p-4 text-center group">
                    <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">üè´</div>
                    <div class="text-gray-800 font-medium text-sm">√âcole</div>
                    <div class="text-gray-600 text-xs">Proposer</div>
                </a>
            </div>
        </div>

        <!-- Mes Enfants -->
        <div class="mb-8 animate-slide-in-right">
            <h2 class="text-gray-800 font-bold text-lg mb-4">Mes enfants</h2>
            
            {% if enfants is empty %}
                <div class="glass-card rounded-2xl p-6 text-center">
                    <div class="text-4xl mb-3">üë∂</div>
                    <div class="text-gray-800 font-medium mb-2">Aucun enfant enregistr√©</div>
                    <div class="text-gray-600 text-sm">Ajoutez votre premier enfant ci-dessous</div>
                </div>
            {% else %}
                <div class="space-y-3">
                    {% for enfant in enfants %}
                        <div class="glass-card rounded-2xl p-4">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-blue-500/20 rounded-full flex items-center justify-center">
                                        <span class="text-blue-600 font-bold text-sm">{{ enfant.prenom|slice(0, 1) }}</span>
                                    </div>
                                    <div class="flex-1">
                                        <div class="text-gray-800 font-medium text-sm">{{ enfant.prenom }} {{ enfant.nom }}</div>
                                        <div class="text-gray-600 text-xs">{{ enfant.sexe == 'M' ? 'Gar√ßon' : 'Fille' }} ‚Ä¢ {{ enfant.dateNaissance|date('d/m/Y') }}</div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <div class="text-right">
                                        {% if enfant.valide %}
                                            <div class="text-green-600 text-xs">‚úì Valid√©</div>
                                        {% else %}
                                            <div class="text-blue-600 text-xs">‚è≥ En attente</div>
                                        {% endif %}
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <a href="{{ path('gestion_modifier_enfant', {'id': enfant.id}) }}" class="w-8 h-8 bg-blue-500/20 rounded-full flex items-center justify-center hover:bg-blue-500/30 transition-colors" title="Modifier">
                                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                            </svg>
                                        </a>
                                        <form method="POST" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet enfant ? Cette action est irr√©versible.')">
                                            <input type="hidden" name="action" value="supprimer_enfant">
                                            <input type="hidden" name="enfant_id" value="{{ enfant.id }}">
                                            <button type="submit" class="w-8 h-8 bg-red-500/20 rounded-full flex items-center justify-center hover:bg-red-500/30 transition-colors" title="Supprimer">
                                                <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- Formulaire d'ajout -->
        <div class="animate-slide-up">
            <h2 class="text-gray-800 font-bold text-lg mb-4">Ajouter un enfant</h2>
            <form method="POST" enctype="multipart/form-data" class="glass-card rounded-2xl p-6 space-y-4">
                <input type="hidden" name="action" value="ajouter_enfant">
                
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Pr√©nom</label>
                        <input type="text" name="prenom" required class="w-full glass-input text-gray-800 rounded-2xl p-3 focus:outline-none focus:ring-2 focus:ring-blue-500/20" placeholder="Pr√©nom de l'enfant">
                    </div>
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Nom</label>
                        <input type="text" name="nom" required class="w-full glass-input text-gray-800 rounded-2xl p-3 focus:outline-none focus:ring-2 focus:ring-blue-500/20" placeholder="Nom de l'enfant">
                    </div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Date de naissance</label>
                        <input type="date" name="dateNaissance" required class="w-full glass-input text-gray-800 rounded-2xl p-3 focus:outline-none focus:ring-2 focus:ring-blue-500/20">
                    </div>
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Sexe</label>
                        <select name="sexe" required class="w-full glass-input text-gray-800 rounded-2xl p-3 focus:outline-none focus:ring-2 focus:ring-blue-500/20">
                            <option value="">Choisir...</option>
                            <option value="M">Gar√ßon</option>
                            <option value="F">Fille</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-2">√âcole</label>
                    <select name="ecoleId" required class="w-full glass-input text-gray-800 rounded-2xl p-3 focus:outline-none focus:ring-2 focus:ring-blue-500/20">
                        <option value="">Choisir une √©cole...</option>
                        {% for ecole in ecoles %}
                            <option value="{{ ecole.id }}">{{ ecole.nom }} - {{ ecole.ville }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-2">Certificat de scolarit√©</label>
                    <input type="file" name="certificatScolarite" accept=".pdf,.jpg,.jpeg,.png" required class="w-full glass-input text-gray-800 rounded-2xl p-3 focus:outline-none focus:ring-2 focus:ring-blue-500/20">
                    <p class="text-gray-500 text-xs mt-1">Formats accept√©s: PDF, JPG, PNG</p>
                </div>

                <button type="submit" class="w-full btn-primary text-white font-medium py-3 px-6 rounded-2xl transition-all duration-300 hover:transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-white/20 shadow-lg hover:shadow-xl">
                    <div class="flex items-center justify-center space-x-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        <span>Ajouter l'enfant</span>
                    </div>
                </button>
            </form>
        </div>
    </main>

    {% include 'partials/_bottom_navigation.html.twig' %}

    <!-- JavaScript for enhanced interactions -->
    <script>
        // Staggered animations on load
        document.addEventListener('DOMContentLoaded', function() {
            const elements = document.querySelectorAll('.animate-slide-up, .animate-slide-in-left, .animate-slide-in-right');
            elements.forEach((el, index) => {
                setTimeout(() => {
                    el.style.opacity = '1';
                    el.style.transform = 'translateX(0) translateY(0)';
                }, index * 150);
            });
        });

        // Parallax effect for floating orbs
        document.addEventListener('mousemove', (e) => {
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;
            
            const orbs = document.querySelector('.floating-orbs');
            if (orbs) {
                orbs.style.transform = `translate(${x * 10}px, ${y * 10}px)`;
            }
        });
    </script>
</body>
</html>