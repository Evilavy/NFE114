{% extends 'base.html.twig' %}

{% block title %}Accueil - Mon Blog{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
        <!-- Navigation -->
        <nav class="bg-white shadow-lg">
            <div class="max-w-6xl mx-auto px-4">
                <div class="flex justify-between items-center h-16">
                    <div class="flex items-center">
                        <a href="{{ path('app_home') }}" class="text-2xl font-bold text-indigo-600">MonBlog</a>
                    </div>
                    <div class="hidden md:flex items-center space-x-8">
                        <a href="{{ path('app_home') }}" class="text-gray-700 hover:text-indigo-600 transition"></a>
                        <a href="{{ path('app_blog') }}" class="text-gray-700 hover:text-indigo-600 transition">Articles</a>
                        <a href="#" class="text-gray-700 hover:text-indigo-600 transition">À propos</a>
                        <a href="#" class="text-gray-700 hover:text-indigo-600 transition">Contact</a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Hero Section -->
        <div class="py-20">
            <div class="max-w-6xl mx-auto px-4">
                <div class="text-center">
                    <h1 class="text-5xl font-extrabold text-gray-900 mb-4">Bienvenue sur Mon Blog</h1>
                    <p class="text-xl text-gray-600 mb-8">Découvrez des articles passionnants sur divers sujets</p>
                    <a href="{{ path('app_blog') }}" class="bg-indigo-600 text-white px-8 py-3 rounded-lg hover:bg-indigo-700 transition">
                        Voir les articles
                    </a>
                </div>
            </div>
        </div>

        <!-- Featured Section -->
        <div class="max-w-6xl mx-auto px-4 py-16">
            <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Articles en vedette</h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Featured Card 1 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Premier Article</h3>
                        <p class="text-gray-600 mb-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit...</p>
                        <a href="#" class="text-indigo-600 hover:text-indigo-800 font-medium">Lire la suite →</a>
                    </div>
                </div>

                <!-- Featured Card 2 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Deuxième Article</h3>
                        <p class="text-gray-600 mb-4">Sed do eiusmod tempor incididunt ut labore et dolore...</p>
                        <a href="#" class="text-indigo-600 hover:text-indigo-800 font-medium">Lire la suite →</a>
                    </div>
                </div>

                <!-- Featured Card 3 -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Troisième Article</h3>
                        <p class="text-gray-600 mb-4">Ut enim ad minim veniam, quis nostrud exercitation...</p>
                        <a href="#" class="text-indigo-600 hover:text-indigo-800 font-medium">Lire la suite →</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="bg-gray-800 text-white py-12">
            <div class="max-w-6xl mx-auto px-4">
                <div class="grid md:grid-cols-3 gap-8">
                    <div>
                        <h4 class="text-xl font-bold mb-4">À propos</h4>
                        <p class="text-gray-400">Un blog moderne créé avec Symfony pour partager des connaissances et des expériences.</p>
                    </div>
                    <div>
                        <h4 class="text-xl font-bold mb-4">Liens rapides</h4>
                        <ul class="space-y-2">
                            <li><a href="#" class="text-gray-400 hover:text-white transition">Accueil</a></li>
                            <li><a href="#" class="text-gray-400 hover:text-white transition">Articles</a></li>
                            <li><a href="#" class="text-gray-400 hover:text-white transition">À propos</a></li>
                            <li><a href="#" class="text-gray-400 hover:text-white transition">Contact</a></li>
                        </ul>
                    </div>
                    <div>
                        <h4 class="text-xl font-bold mb-4">Contact</h4>
                        <p class="text-gray-400">Email: contact@monblog.fr</p>
                        <div class="mt-4 space-x-4">
                            <a href="#" class="text-gray-400 hover:text-white transition">Twitter</a>
                            <a href="#" class="text-gray-400 hover:text-white transition">LinkedIn</a>
                            <a href="#" class="text-gray-400 hover:text-white transition">GitHub</a>
                        </div>
                    </div>
                </div>
                <div class="mt-8 pt-8 border-t border-gray-700 text-center text-gray-400">
                    <p>&copy; {{ "now"|date("Y") }} MonBlog. Tous droits réservés.</p>
                </div>
            </div>
        </footer>
    </div>
{% endblock %}
