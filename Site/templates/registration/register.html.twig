<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Inscription - AlloParents{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'shimmer': 'shimmer 2s linear infinite',
                        'float': 'float 6s ease-in-out infinite',
                    },
                    keyframes: {
                        shimmer: {
                            '0%': { backgroundPosition: '-200% center' },
                            '100%': { backgroundPosition: '200% center' }
                        },
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-10px)' }
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .gradient-bg {
            background: linear-gradient(135deg,
                #ffffff 0%,
                #f8fafc 25%,
                #f1f5f9 50%,
                #e2e8f0 75%,
                #cbd5e1 100%
            );
        }
        
        .glass-morphism {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(0, 0, 0, 0.08);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), 0 4px 16px rgba(0, 0, 0, 0.04);
        }
        
        .input-glass {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0, 0, 0, 0.1);
        }
        
        .input-glass:focus {
            background: rgba(255, 255, 255, 1);
            border-color: rgba(59, 130, 246, 0.5);
            box-shadow: 0 0 30px rgba(59, 130, 246, 0.1);
        }
        
        .btn-gradient {
            background: linear-gradient(45deg, #3b82f6, #2563eb, #1d4ed8);
            background-size: 200% 200%;
            animation: shimmer 3s ease-in-out infinite;
        }
        
        .btn-gradient:hover {
            background: linear-gradient(45deg, #2563eb, #1d4ed8, #1e40af);
        }
        
        .floating-orbs::before,
        .floating-orbs::after {
            content: '';
            position: absolute;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
        }
        
        .floating-orbs::before {
            width: 300px;
            height: 300px;
            top: -150px;
            right: -150px;
            animation: float 8s ease-in-out infinite;
        }
        
        .floating-orbs::after {
            width: 200px;
            height: 200px;
            bottom: -100px;
            left: -100px;
            animation: float 6s ease-in-out infinite reverse;
        }
        
        .text-shadow {
            text-shadow: 0 2px 20px rgba(0,0,0,0.1);
        }
    </style>
</head>

<body class="gradient-bg min-h-screen overflow-hidden">
    <!-- Animated Background -->
    <div class="floating-orbs absolute inset-0 pointer-events-none"></div>
    
    <!-- Noise Texture Overlay -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: url('data:image/svg+xml,<svg viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg"><defs><filter id="noiseFilter"><feTurbulence type="fractalNoise" baseFrequency="0.85" numOctaves="4" stitchTiles="stitch"/></filter></defs><rect width="100%" height="100%" filter="url(%23noiseFilter)" opacity="0.4"/></svg>');"></div>

    <!-- Main Container -->
    <div class="relative min-h-screen flex items-center justify-center p-4 sm:p-6">
        <div class="w-full max-w-lg sm:max-w-xl">
            
            <!-- Logo/Header Section -->
            <div class="text-center mb-8 sm:mb-10">
                <div class="inline-flex items-center justify-center w-16 h-16 sm:w-20 sm:h-20 rounded-full glass-morphism mb-6 group">
                    <svg class="w-8 h-8 sm:w-10 sm:h-10 text-blue-600 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                    </svg>
                </div>
                <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-800 mb-3 text-shadow">AlloParents</h1>
                <p class="text-gray-600 text-base sm:text-lg opacity-90">Créez votre compte</p>
            </div>

            <!-- Registration Card -->
            <div class="glass-morphism rounded-3xl p-6 sm:p-8 shadow-2xl relative overflow-hidden">
                
                <!-- Subtle Inner Glow -->
                <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-white/[0.02] to-transparent pointer-events-none"></div>
                
                <div class="relative">
                    
                    <!-- Success Messages -->
                    {% for message in app.flashes('success') %}
                        <div class="mb-6 p-4 rounded-2xl bg-emerald-500/10 border border-emerald-500/20 backdrop-blur-sm">
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-emerald-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <div>
                                    <p class="text-emerald-700 text-sm font-medium">Compte créé avec succès</p>
                                    <p class="text-emerald-600 text-xs mt-1 opacity-90">{{ message }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    <!-- Error Messages -->
                    {% for message in app.flashes('error') %}
                        <div class="mb-6 p-4 rounded-2xl bg-red-500/10 border border-red-500/20 backdrop-blur-sm">
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-red-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <div>
                                    <p class="text-red-700 text-sm font-medium">Erreur d'inscription</p>
                                    <p class="text-red-600 text-xs mt-1 opacity-90">{{ message }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    <!-- Form Errors -->
                    {% if form_errors(registrationForm) %}
                        <div class="mb-6 p-4 rounded-2xl bg-red-500/10 border border-red-500/20 backdrop-blur-sm">
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-red-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <div>
                                    <p class="text-red-700 text-sm font-medium">Erreur d'inscription</p>
                                    <div class="text-red-600 text-xs mt-1 opacity-90">
                                        {{ form_errors(registrationForm) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Registration Form -->
                    {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                        
                        <!-- Name Fields -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="relative group">
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-500 group-focus-within:text-blue-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                        </svg>
                                    </div>
                                    {{ form_widget(registrationForm.prenom, {
                                        'attr': {
                                            'class': 'w-full input-glass rounded-2xl pl-12 pr-4 py-3 text-gray-800 placeholder-gray-500 focus:outline-none transition-all duration-300',
                                            'placeholder': 'Votre prénom'
                                        }
                                    }) }}
                                </div>
                                {% if form_errors(registrationForm.prenom) %}
                                    <div class="mt-1 text-red-600 text-xs">{{ form_errors(registrationForm.prenom) }}</div>
                                {% endif %}
                            </div>
                            
                            <div class="relative group">
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-500 group-focus-within:text-blue-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                        </svg>
                                    </div>
                                    {{ form_widget(registrationForm.nom, {
                                        'attr': {
                                            'class': 'w-full input-glass rounded-2xl pl-12 pr-4 py-3 text-gray-800 placeholder-gray-500 focus:outline-none transition-all duration-300',
                                            'placeholder': 'Votre nom'
                                        }
                                    }) }}
                                </div>
                                {% if form_errors(registrationForm.nom) %}
                                    <div class="mt-1 text-red-600 text-xs">{{ form_errors(registrationForm.nom) }}</div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="relative group">
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <svg class="w-5 h-5 text-gray-500 group-focus-within:text-blue-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                                    </svg>
                                </div>
                                {{ form_widget(registrationForm.email, {
                                    'attr': {
                                        'class': 'w-full input-glass rounded-2xl pl-12 pr-4 py-3 text-gray-800 placeholder-gray-500 focus:outline-none transition-all duration-300',
                                        'placeholder': 'votre@email.com'
                                    }
                                }) }}
                            </div>
                            {% if form_errors(registrationForm.email) %}
                                <div class="mt-1 text-red-600 text-xs">{{ form_errors(registrationForm.email) }}</div>
                            {% endif %}
                        </div>

                        <!-- Role and Role Autre -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="relative group">
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-500 group-focus-within:text-blue-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
                                        </svg>
                                    </div>
                                    {{ form_widget(registrationForm.role, {
                                        'attr': {
                                            'class': 'w-full input-glass rounded-2xl pl-12 pr-4 py-3 text-gray-800 focus:outline-none transition-all duration-300'
                                        }
                                    }) }}
                                </div>
                                {% if form_errors(registrationForm.role) %}
                                    <div class="mt-1 text-red-600 text-xs">{{ form_errors(registrationForm.role) }}</div>
                                {% endif %}
                            </div>
                            
                            <div class="relative group" id="roleAutreContainer" style="display: none;">
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-500 group-focus-within:text-blue-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                        </svg>
                                    </div>
                                    {{ form_widget(registrationForm.roleAutre, {
                                        'attr': {
                                            'class': 'w-full input-glass rounded-2xl pl-12 pr-4 py-3 text-gray-800 placeholder-gray-500 focus:outline-none transition-all duration-300',
                                            'placeholder': 'Précisez votre rôle'
                                        }
                                    }) }}
                                </div>
                                {% if form_errors(registrationForm.roleAutre) %}
                                    <div class="mt-1 text-red-600 text-xs">{{ form_errors(registrationForm.roleAutre) }}</div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Password Fields -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Password -->
                            <div class="relative group">
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-500 group-focus-within:text-blue-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                        </svg>
                                    </div>
                                    {{ form_widget(registrationForm.plainPassword.first, {
                                        'attr': {
                                            'class': 'w-full input-glass rounded-2xl pl-12 pr-4 py-3 text-gray-800 placeholder-gray-500 focus:outline-none transition-all duration-300',
                                            'placeholder': 'Mot de passe'
                                        }
                                    }) }}
                                </div>
                                {% if form_errors(registrationForm.plainPassword.first) %}
                                    <div class="mt-1 text-red-600 text-xs">{{ form_errors(registrationForm.plainPassword.first) }}</div>
                                {% endif %}
                            </div>
                            
                            <!-- Password Confirmation -->
                            <div class="relative group">
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-500 group-focus-within:text-blue-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                    </div>
                                    {{ form_widget(registrationForm.plainPassword.second, {
                                        'attr': {
                                            'class': 'w-full input-glass rounded-2xl pl-12 pr-4 py-3 text-gray-800 placeholder-gray-500 focus:outline-none transition-all duration-300',
                                            'placeholder': 'Confirmer le mot de passe'
                                        }
                                    }) }}
                                </div>
                                {% if form_errors(registrationForm.plainPassword.second) %}
                                    <div class="mt-1 text-red-600 text-xs">{{ form_errors(registrationForm.plainPassword.second) }}</div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- Password Errors -->
                        {% if form_errors(registrationForm.plainPassword) %}
                            <div class="text-red-600 text-xs">{{ form_errors(registrationForm.plainPassword) }}</div>
                        {% endif %}

                        <!-- Terms Agreement -->
                        {% if registrationForm.agreeTerms is defined %}
                            <div class="flex items-start space-x-3 p-4 rounded-2xl bg-gray-50 border border-gray-200">
                                {{ form_widget(registrationForm.agreeTerms, {
                                    'attr': {
                                        'class': 'mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500/20'
                                    }
                                }) }}
                                <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-gray-600 text-sm leading-relaxed">
                                    J'accepte les <span class="text-blue-600 font-medium">conditions d'utilisation</span> et la <span class="text-blue-600 font-medium">politique de confidentialité</span>
                                </label>
                            </div>
                            {% if form_errors(registrationForm.agreeTerms) %}
                                <div class="mt-1 text-red-600 text-xs">{{ form_errors(registrationForm.agreeTerms) }}</div>
                            {% endif %}
                        {% endif %}

                        <!-- Submit Button -->
                        <div class="pt-4">
                            <button type="submit" class="w-full btn-gradient text-white font-medium py-3 px-6 rounded-2xl transition-all duration-300 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-blue-500/20 shadow-lg hover:shadow-xl relative overflow-hidden group">
                                <div class="relative z-10 flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                                    </svg>
                                    Créer mon compte
                                </div>
                            </button>
                        </div>

                    {{ form_end(registrationForm) }}

                    <!-- Info Message -->
                    <div class="mt-6 p-4 rounded-2xl bg-blue-500/10 border border-blue-500/20 backdrop-blur-sm">
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-blue-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <div>
                                <p class="text-blue-700 text-sm font-medium">Information importante</p>
                                <p class="text-blue-600 text-xs mt-1 opacity-90">
                                    Votre inscription sera validée par un administrateur dans les plus brefs délais.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Login Link -->
                    <div class="text-center mt-6">
                        <p class="text-gray-600 text-sm mb-4">Vous avez déjà un compte ?</p>
                        <a href="{{ path('app_login') }}" class="inline-flex items-center justify-center w-full py-3 px-4 input-glass rounded-2xl text-gray-700 font-medium hover:bg-blue-50 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500/20 group">
                            <svg class="w-4 h-4 mr-2 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                            </svg>
                            Se connecter à mon compte
                        </a>
                    </div>

                    <!-- Footer -->
                    <div class="mt-8 text-center">
                        <p class="text-xs text-gray-600 opacity-70">
                            En créant un compte, vous acceptez nos conditions d'utilisation et notre politique de confidentialité.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const roleSelect = document.getElementById('registration_form_role');
            const roleAutreContainer = document.getElementById('roleAutreContainer');
            const roleAutreInput = document.getElementById('registration_form_roleAutre');

            function toggleRoleAutre() {
                if (roleSelect && roleSelect.value === 'autre') {
                    roleAutreContainer.style.display = 'block';
                    if (roleAutreInput) {
                        roleAutreInput.required = true;
                    }
                } else {
                    roleAutreContainer.style.display = 'none';
                    if (roleAutreInput) {
                        roleAutreInput.required = false;
                        roleAutreInput.value = '';
                    }
                }
            }

            if (roleSelect) {
                roleSelect.addEventListener('change', toggleRoleAutre);
                toggleRoleAutre(); // Initial state
            }

            // Auto-focus on first field
            const firstInput = document.querySelector('input[type="text"]');
            if (firstInput) {
                firstInput.focus();
            }
        });
    </script>
</body>
</html>